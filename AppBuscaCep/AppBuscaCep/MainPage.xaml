<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBuscaCep.MainPage">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <Grid ColumnDefinitions="*" RowDefinitions="*">
                <StackLayout Grid.Row="0" Spacing="15"
                             Padding="10"
                             Margin="10,50,10,0">

                    <Button Text="Início" x:Name="BtnInicio" Clicked="BtnInicio_Clicked"/>
                    <Button Text="Endereço por CEP" x:Name="BtnEnderecoByCep" Clicked="BtnEnderecoByCep_Clicked"/>
                    <Button Text="Bairros por Cidade" x:Name="BtnBairrosByCidade" Clicked="BtnBairrosByCidade_Clicked"/>
                    <Button Text="Logradouro por Bairro e Cidade" x:Name="BtnLogradouroByBairroAndCidade" Clicked="BtnLogradouroByBairroAndCidade_Clicked"/>
                    <Button Text="Cep por Logradouro" x:Name="BtnCepByLogradouro" Clicked="BtnCepByLogradouro_Clicked"/>

                </StackLayout>
            </Grid>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>
