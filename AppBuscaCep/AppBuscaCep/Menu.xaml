<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBuscaCep.Menu">
    <ContentPage.Content>
        <Grid ColumnDefinitions="*, *" RowDefinitions="*, *, *, *, *">
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Api Busca CEP"
                   Style="{StaticResource Label_preta}" />
            
            <Button Grid.Row="1" Grid.Column="0" Text="Buscar Endereço Por CEP" 
                    x:Name="BtnEnderecoByCep" Clicked="BtnEnderecoByCep_Clicked"/>
            
            <Button Grid.Row="1" Grid.Column="1" Text="Buscar Bairros Por Cidade" 
                    x:Name="BtnBairrosByCidade" Clicked="BtnBairrosByCidade_Clicked"/>
            
            <Button Grid.Row="2" Grid.Column="0" Text="Buscar Ruas Por Bairro e Cidade" 
                    x:Name="BtnLogradouroByBairroAndCidade" Clicked="BtnLogradouroByBairroAndCidade_Clicked"/>
            
            <Button Grid.Row="2" Grid.Column="1" Text="Buscar Cep Por Rua" 
                    x:Name="BtnCepByLogradouro" Clicked="BtnCepByLogradouro_Clicked"/>
            
            <Button Grid.Row="3" Grid.Column="0" Text="Buscar Cidade Por Estado" 
                    x:Name="BtnCidadeByEstado" Clicked="BtnCidadeByEstado_Clicked"/>            

        </Grid>
    </ContentPage.Content>
</ContentPage>